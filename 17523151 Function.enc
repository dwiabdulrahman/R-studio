#Linear Functions
#f(x) = ax + b
f <- function (x){
  # a=2 dan b=2
  result<- 2*x + 2
  return(result)
}
input <- 1:5
plot (input,
      sapply(input, f),
      type="l", xlab="x",
      ylab="f(x)")
