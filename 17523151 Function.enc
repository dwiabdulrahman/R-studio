#Quadratic Functions
#fx=ax^2 + bx + c
f<- function (x){
  #a=4 , b=3, c=2
  result <- 4*x^2 + 3*x + 2
  return (result)
}
input <- -5:10
plot(input,
     sapply(input, f),
     type = "l", xlab="x",
     ylab = "f(x)")
